{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Biss.EmployeeManagement": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Biss.EmployeeManagement": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/employee-management-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=EmployeeManagement;User Id=employee_user;Password=Employee@Password123;TrustServerCertificate=True;"
  },
  "Database": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true,
    "CommandTimeoutSeconds": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 5
  },
  "HealthCheck": {
    "EnableHealthChecks": true,
    "HealthCheckTimeoutSeconds": 30,
    "HealthCheckIntervalSeconds": 60,
    "EnableDatabaseHealthCheck": true
  },
  "Security": {
    "JwtSettings": {
      "SecretKey": "YourSuperSecretKeyForJWTTokenGenerationMustBeAtLeast32CharactersLong!",
      "Issuer": "Biss.EmployeeManagement",
      "Audience": "Biss.EmployeeManagement.Users",
      "ExpirationMinutes": 60
    },
    "HttpsRedirection": {
      "EnableHttpsRedirection": false,
      "HttpsPort": 443
    }
  }
}
